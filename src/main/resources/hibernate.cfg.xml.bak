<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

	<session-factory>
		<property name="connection.username">root</property>
		<property name="connection.password">root</property>
		<property name="connection.url">
			jdbc:mysql://localhost:3306/practise
		</property>
		<!-- <property name="hibernate.cache.provider_class">
			org.hibernate.cache.EhCacheProvider
			</property> -->
		<property name="hibernate.c3p0.testConnectionOnCheckout">
			false
		</property>
		<property name="hibernate.c3p0.idle_test_period">100</property>
		<property name="hibernate.c3p0.timeout">200</property>
		<property name="hibernate.connection.autocommit">
			false
		</property>
		<property name=""></property>


		<property name="hibernate.connection.pool_size">30</property>
		<property name="hibernate.bytecode.provider">cglib</property>
		<property name="hibernate.jdbc.use_streams_for_binary">
			true
		</property>


		<property name="dialect">
			org.hibernate.dialect.MySQLDialect
		</property>
		<property name="myeclipse.connection.profile">
			mysqllocal
		</property>
		<property name="connection.driver_class">
			com.mysql.jdbc.Driver
		</property>
		<!-- <property name="hibernate.cache.use_second_level_cache">true</property>
			<property name="hibernate.cache.use_query_cache">true</property>
			<property name="hibernate.generate_statistics">false</property> -->

		<property name="format_sql">false</property>
		<property name="show_sql">false</property>
		<property name="default_batch_fetch_size">5</property>
		<property name="hibernate.connection.provider_class">
			org.hibernate.connection.C3P0ConnectionProvider
		</property>

		<mapping class="com.app.data.beans.Role" />
		<mapping class="com.app.data.beans.Priviledge" />
		
		<mapping class="com.app.data.beans.UserInfo" /> 
		<mapping class="com.app.data.beans.UserLogin" />
		
	</session-factory>

</hibernate-configuration>